<script src="/js/scripts.js"></script>

<style>
    .Idcol {
        display: none;
    }
</style>

<table>
    <thead>
        <tr>
            <th class="Idcol">>ID</th>
            <th>Name</th>
            <th>Reps</th>
            <th>Weight</th>
            <th>Date</th>
            <th>Lbs</th>
        </tr>
    </thead>
    <tbody id="table">
        {{#each rows}}
        <tr>
            <td class ="d-none">
                <input type="number" value={{this.id}} readonly>
            </td>
            <td>
                <input type="text" value="{{this.name}}" readonly>
            </td>
            <td>
                <input type="number" value={{this.reps}} readonly>
            </td>
            <td>
                <input type="number" value={{this.weight}} readonly>
            </td>
            <td>
                <input type="date" value={{this.date}} readonly>
            </td>
            <td>
                <input type="text" value={{this.lbs}} readonly>
            </td>
            <td>
                <button type="submit">Edit</button>
            </td>
            <td>
                <button type="submit">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div>
    <button type="submit" id="resetTable">Reset Table</button>
</div>